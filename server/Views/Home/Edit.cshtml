@model UserProfile

<div class="text-center row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-controller="Home">
            <h1>Edit your Profile!</h1>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="FirstName">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="LastName">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="Address">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="DOB"></label>
                <span asp-validation-for="DOB" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="DOB">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="AboutMe"></label>
                <span asp-validation-for="AboutMe" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="AboutMe">
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>