            <h2>@Model.Candidates[0].</h2>
            <form asp-controller="Comparisons" asp-action="Compare2">
                <input hidden="" asp-for="Candidates" value="@Model.Candidates">
                <input hidden="" asp-for="WinningBoxNumber" value=0>
                <div>
