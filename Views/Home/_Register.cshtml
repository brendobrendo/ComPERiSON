@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .container {
            display: flex;
        }

        form {
            width: 600px;
            padding: 25px;
            margin-top: 25px;
            margin-right: 25px;
        }

        .fields {
            display: flex;
            justify-content: space-between;
        }
        
        .input-field {
            width: 300px;
        }

        textarea {
            width: 100%;
        }
    </style>
    <title>Email Input</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Home" asp-action="Register" class="border bg-light">
            <h1>Register</h1>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="FirstName">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="LastName">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="Email">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="Password">
            </div>
            <div class="mb-3 fields">
                <label class="form-label" asp-for="PasswordConfirm"></label>
                <span asp-validation-for="PasswordConfirm" class="text-danger font-weight-bold"></span>
                <input class="form-control input-field" asp-for="PasswordConfirm">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>  
</body>
</html>