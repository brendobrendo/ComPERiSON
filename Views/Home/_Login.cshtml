@model LoginUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .container {
            display: flex;
        }

        form {
            width: 600px;
            padding: 25px;
            margin-top: 25px;
            margin-right: 25px;
        }

        .fields {
            display: flex;
            justify-content: space-between;
        }
        
        .input-field {
            width: 300px;
        }

        textarea {
            width: 100%;
        }
    </style>
    <title>Email Input</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Home" asp-action="LogIn" method="POST" class="border bg-light">
        <h1>Login</h1>
        <div class="mb-3 fields">
            <label class="form-label" asp-for="LoginEmail"></label>
            <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>
            <input class="form-control input-field" asp-for="LoginEmail">
        </div>
        <div class="mb-3 fields">
            <label class="form-label" asp-for="LoginPassword"></label>
            <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
            <input class="form-control input-field" asp-for="LoginPassword">
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </div>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>  
</body>
</html>